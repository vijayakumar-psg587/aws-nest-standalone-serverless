{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"rootDir": "./",
		"incremental": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist", "test", "logs", "deployment"],
	"compileOnSave": true
}
